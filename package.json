{
    "name": "jj-view",
    "displayName": "JJ View",
    "description": "Integrates Jujutsu (jj) version control into VS Code.",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/brychanrobot/jj-view"
    },
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.jj"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "JJ View",
            "properties": {
                "jj-view.refreshDebounceMillis": {
                    "type": "number",
                    "default": 100,
                    "description": "Base debounce time (ms) for SCM refresh based on file events."
                },
                "jj-view.refreshDebounceMaxMultiplier": {
                    "type": "number",
                    "default": 4,
                    "minimum": 1,
                    "description": "Maximum multiplier for the debounce timeout when events continue to occur."
                },
                "jj-view.watcherIgnore": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".git"
                    ],
                    "description": "Paths (segments) to ignore in file watcher to prevent unnecessary SCM refreshes."
                }
            }
        },
        "commands": [
            {
                "command": "jj-view.showCurrentChange",
                "title": "Show Current Change",
                "category": "JJ View"
            },
            {
                "command": "jj-view.newMergeChange",
                "title": "New Merge Change",
                "category": "JJ View",
                "icon": "$(git-merge)"
            },
            {
                "command": "jj-view.new",
                "title": "New Change",
                "category": "JJ View",
                "icon": "$(plus)"
            },
            {
                "command": "jj-view.setDescription",
                "title": "Set Description",
                "category": "JJ View",
                "icon": "$(save)"
            },
            {
                "command": "jj-view.commit",
                "title": "Commit",
                "category": "JJ View",
                "icon": "$(check)"
            },
            {
                "command": "jj-view.refresh",
                "title": "Refresh",
                "category": "JJ View",
                "icon": "$(refresh)"
            },
            {
                "command": "jj-view.restore",
                "title": "Restore",
                "category": "JJ View",
                "icon": "$(discard)"
            },
            {
                "command": "jj-view.squash",
                "title": "Squash into Parent",
                "category": "JJ View",
                "icon": "$(arrow-down)"
            },
            {
                "command": "jj-view.moveToChild",
                "title": "Move to Child",
                "category": "JJ View",
                "icon": "$(arrow-up)"
            },
            {
                "command": "jj-view.openFile",
                "title": "Open File",
                "category": "JJ View",
                "icon": "$(go-to-file)"
            },
            {
                "command": "jj-view.undo",
                "title": "Undo",
                "category": "JJ View",
                "icon": "$(discard)"
            },
            {
                "command": "jj-view.duplicate",
                "title": "Duplicate",
                "category": "JJ View"
            },
            {
                "command": "jj-view.abandon",
                "title": "Abandon",
                "category": "JJ View",
                "icon": "$(trash)"
            },
            {
                "command": "jj-view.edit",
                "title": "Edit",
                "category": "JJ View",
                "icon": "$(edit)"
            },
            {
                "command": "jj-view.newBefore",
                "title": "New Before",
                "category": "JJ View"
            },
            {
                "command": "jj-view.moveToParentInDiff",
                "title": "Move to Parent",
                "category": "JJ View"
            },
            {
                "command": "jj-view.moveToChildInDiff",
                "title": "Move to Child",
                "category": "JJ View"
            },
            {
                "command": "jj-view.openMergeEditor",
                "title": "Open Merge Editor",
                "category": "JJ View"
            },
            {
                "command": "jj-view.completeSquash",
                "title": "Complete Squash",
                "category": "JJ View",
                "icon": "$(check)"
            },
            {
                "command": "jj-view.rebaseOntoSelected",
                "title": "Rebase onto Selected",
                "category": "JJ View",
                "icon": "$(git-merge)"
            },
            {
                "command": "jj-view.showDetails",
                "title": "Show Details",
                "category": "JJ View",
                "icon": "$(list-selection)"
            }
        ],
        "keybindings": [
            {
                "command": "jj-view.setDescription",
                "key": "ctrl+s",
                "mac": "cmd+s",
                "when": "scmProvider == 'jj' && editorLangId == 'scminput'"
            },
            {
                "command": "jj-view.commit",
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "when": "scmProvider == 'jj' && editorLangId == 'scminput'"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "jj-view.undo",
                    "group": "navigation",
                    "when": "view == jj-view.logView"
                },
                {
                    "command": "jj-view.abandon",
                    "group": "navigation",
                    "when": "view == jj-view.logView && jj.selection.allowAbandon"
                },
                {
                    "command": "jj-view.newMergeChange",
                    "group": "navigation",
                    "when": "view == jj-view.logView && jj.selection.allowMerge"
                }
            ],
            "webview/context": [
                {
                    "command": "jj-view.edit",
                    "when": "webviewSection == 'commit' && canEdit",
                    "group": "navigation"
                },
                {
                    "command": "jj-view.newBefore",
                    "when": "webviewSection == 'commit' && canEdit",
                    "group": "navigation"
                },
                {
                    "command": "jj-view.duplicate",
                    "when": "webviewSection == 'commit' && canDuplicate",
                    "group": "navigation"
                },
                {
                    "command": "jj-view.newMergeChange",
                    "when": "webviewSection == 'commit' && canMerge",
                    "group": "navigation"
                },
                {
                    "command": "jj-view.rebaseOntoSelected",
                    "when": "webviewSection == 'commit' && canRebaseOnto",
                    "group": "navigation"
                },
                {
                    "command": "jj-view.abandon",
                    "when": "webviewSection == 'commit' && canAbandon",
                    "group": "navigation"
                }
            ],
            "scm/title": [
                {
                    "command": "jj-view.new",
                    "group": "navigation@1"
                },
                {
                    "command": "jj-view.setDescription",
                    "group": "navigation@2"
                },
                {
                    "command": "jj-view.commit",
                    "group": "navigation@3"
                },
                {
                    "command": "jj-view.refresh",
                    "group": "navigation@10"
                }
            ],
            "scm/resourceGroup/context": [
                {
                    "command": "jj-view.squash",
                    "group": "inline",
                    "when": "scmResourceGroup == 'working-copy' && jj.parentMutable"
                },
                {
                    "command": "jj-view.abandon",
                    "group": "inline",
                    "when": "scmResourceGroup == 'working-copy'"
                },
                {
                    "command": "jj-view.showDetails",
                    "group": "inline@1",
                    "when": "scmResourceGroupState =~ /^jjParentGroup/"
                },
                {
                    "command": "jj-view.edit",
                    "group": "inline@2",
                    "when": "scmResourceGroupState == 'jjParentGroup:mutable'"
                }
            ],
            "scm/resourceState/context": [
                {
                    "command": "jj-view.restore",
                    "group": "inline",
                    "when": "scmResourceState == 'jjWorkingCopy'"
                },
                {
                    "command": "jj-view.squash",
                    "group": "inline",
                    "when": "scmResourceState == 'jjWorkingCopy' && jj.parentMutable"
                },
                {
                    "command": "jj-view.moveToChild",
                    "icon": "$(git-merge)",
                    "group": "inline",
                    "when": "scmResourceState == 'jjParent'"
                },
                {
                    "command": "jj-view.moveToChild",
                    "icon": "$(git-merge)",
                    "group": "inline",
                    "when": "scmResourceState == 'jjWorkingCopy' && jj.hasChild"
                }
            ],
            "scm/resourceState/inline": [
                {
                    "command": "jj-view.restore",
                    "group": "inline"
                },
                {
                    "command": "jj-view.squash",
                    "group": "inline",
                    "when": "scmResourceState == 'jjWorkingCopy' && jj.parentMutable"
                },
                {
                    "command": "jj-view.moveToChild",
                    "group": "inline",
                    "when": "scmResourceState == 'jjParent'"
                },
                {
                    "command": "jj-view.moveToChild",
                    "group": "inline",
                    "when": "scmResourceState == 'jjWorkingCopy' && jj.hasChild"
                }
            ],
            "editor/title": [
                {
                    "command": "jj-view.completeSquash",
                    "group": "navigation",
                    "when": "resourceFilename == 'SQUASH_MSG'"
                }
            ],
            "editor/context": [
                {
                    "command": "jj-view.moveToParentInDiff",
                    "group": "jj-view",
                    "when": "isInDiffEditor && jj.parentMutable"
                },
                {
                    "command": "jj-view.moveToChildInDiff",
                    "group": "jj-view",
                    "when": "isInDiffEditor && jj.hasChild"
                }
            ]
        },
        "views": {
            "scm": [
                {
                    "id": "jj-view.logView",
                    "name": "JJ Log",
                    "type": "webview"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run check-types && npm run lint && node esbuild.js --production",
        "build": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "vsce package",
        "clean:tests": "rimraf out",
        "build:tests": "npm run clean:tests && tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run build && npm run build:tests && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src && npm run check-license",
        "check-license": "go run github.com/google/addlicense@v1.1.1 -check -s=only -ignore='node_modules/**' -ignore='dist/**' -ignore='out/**' -ignore='coverage/**' -ignore='.vscode-test/**' -ignore='.jj/**' **",
        "format": "prettier --write .",
        "check-format": "prettier --check .",
        "test": "npm-run-all -p --print-label test:unit test:integration",
        "test:integration": "npm run build:tests && vscode-test",
        "test:unit": "vitest run"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/sinon": "^21.0.0",
        "@types/vscode": "^1.104.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.7.1",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "sinon": "^21.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1",
        "vitest": "^4.0.16"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/modifiers": "^9.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@vscode-elements/elements": "^2.4.0",
        "@vscode/codicons": "^0.0.44",
        "parse-diff": "^0.11.1",
        "react": "^19.2.3",
        "react-dom": "^19.2.3"
    }
}
